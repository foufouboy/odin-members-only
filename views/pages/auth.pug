extends ../partials/layout 

block scripts 
    if route == "register"
        script(src="/scripts/register.js" defer)

block content
    main.auth
        if route == "login"
            form.form(action="./" method="POST")
                h2.form-title Welcome back
                .default-input.username-input
                    label(for="username") Username
                    input(
                        id="username"
                        name="username"
                        type="text"
                        minlength="5"
                        maxlength="50"
                        required
                    )
                .default-input.password-input
                    label(for="password") Password
                    input(
                        id="password"
                        name="password"
                        type="password"
                        minlength="5"
                        maxlength="50"
                        required
                    )
                .useless-checkbox
                    input(
                        type="checkbox"
                        id="useless-checkbox"
                        value="youre gay"
                    ) 
                    label(for="useless-checkbox") Check this useless checkbox
                button.violet-button.login(type="submit") Login
        else 
            form.form(method="POST")
                if success
                    .notif.successful-reg
                        p Account created successfully, you can 
                            a(href="/login") login
                        | now!
                if errors
                    ul.errors 
                        each error in errors
                            li=error.msg
                h2.form-title Register a new account
                .default-input.fullname-input
                    label(for="full_name") Fullname
                    input(
                        id="full_name"
                        name="full_name"
                        type="text"
                        minlength="5"
                        maxlength="50"
                        required
                    )
                .default-input.username-input
                    label(for="username") Username
                    input(
                        id="username"
                        name="username"
                        type="text"
                        minlength="5"
                        maxlength="50"
                        required
                    )
                .default-input.password-input
                    label(for="password") Password
                    input(
                        id="password"
                        name="password"
                        type="password"
                        minlength="5"
                        maxlength="50"
                        required
                    )
                .default-input.confirm-input
                    label(for="conf-password") Confirm password
                    input(
                        id="conf-password"
                        name="conf-password"
                        type="password"
                        minlength="5"
                        maxlength="50"
                        required
                    )
                    p.confirm-error Passwords do not match. Please try again. 
                .useless-checkbox
                    input(
                        type="checkbox"
                        id="useless-checkbox"
                        value="youre gay"
                    ) 
                    label(for="useless-checkbox") Check this really useless checkbox
                button.violet-button.login(type="submit") Register
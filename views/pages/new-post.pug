
extends ../partials/layout 

block content
    main.new-post
            form.form(method="POST")
                if errors
                    include ../partials/validation-errors
                .default-input
                    label Title
                    input(
                        type="text"
                        minlength="5"
                        maxlength="50"
                        required
                        name="title"
                        id="title"
                    )
                .default-input
                    label Content
                    textarea(
                        id="content"
                        minlength="10"
                        maxlength="500"
                        rows="10"
                        cols="55"
                        name="content"
                        required
                    )
                button.new-post.violet-button(type="submit") Submit